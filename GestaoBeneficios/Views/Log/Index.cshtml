@model IEnumerable<GestaoBeneficios.DTO.LogDTO>

@{
    ViewData["Title"] = "Log de Alterações";
}

<h2>Log de Alterações</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colaborador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beneficio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colaborador.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beneficio.Nome)
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
